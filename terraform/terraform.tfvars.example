# Proxmox Configuration
proxmox_api_url      = "https://192.168.1.3:8006/api2/json"
proxmox_user         = "root@pam"
proxmox_password     = "your-proxmox-password"
proxmox_tls_insecure = true
proxmox_node         = "pve"
proxmox_storage      = "local-lvm"
proxmox_bridge       = "vmbr0"

# Template
template_name = "debian-12-cloud"

# Environment
environment = "prod"

# VM IDs (must be unique in Proxmox)
vmid_core = 100
vmid_apps = 101
vmid_edge = 102

# Core VM Resources (PostgreSQL, Redis, Keycloak)
core_vm_cores  = 4
core_vm_memory = 8192  # MB
core_vm_disk   = 50    # GB
core_vm_ip     = "192.168.1.10"

# Apps VM Resources (Nextcloud, Gitea, Mattermost, etc.)
apps_vm_cores  = 4
apps_vm_memory = 8192  # MB
apps_vm_disk   = 80    # GB
apps_vm_ip     = "192.168.1.11"

# Edge VM Resources (Caddy, Prometheus, Grafana)
edge_vm_cores  = 2
edge_vm_memory = 4096  # MB
edge_vm_disk   = 40    # GB
edge_vm_ip     = "192.168.1.12"

# Network
network_gateway = "192.168.1.1"

# SSH Configuration
ssh_user       = "ceres"
ssh_password   = "your-secure-password"  # Leave empty if using SSH keys only
ssh_public_key = <<-EOT
  ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here
EOT
