{
  "uid": "ceres-overview",
  "title": "CERES / Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "tags": ["ceres"],
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Targets UP",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "refId": "A", "expr": "sum(up)", "legendFormat": "" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "horizontal" },
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] }
    },
    {
      "type": "stat",
      "title": "Targets DOWN",
      "id": 2,
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "refId": "A", "expr": "sum(up == 0)", "legendFormat": "" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "horizontal" },
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] }
    },
    {
      "type": "stat",
      "title": "Postgres UP",
      "id": 3,
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "refId": "A", "expr": "max(pg_up)", "legendFormat": "" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "horizontal" },
      "fieldConfig": { "defaults": { "mappings": [ { "type": "value", "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } } } ] }, "overrides": [] }
    },
    {
      "type": "stat",
      "title": "Redis UP",
      "id": 4,
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "refId": "A", "expr": "max(redis_up)", "legendFormat": "" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "horizontal" },
      "fieldConfig": { "defaults": { "mappings": [ { "type": "value", "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } } } ] }, "overrides": [] }
    },
    {
      "type": "stat",
      "title": "Containers (seen by cAdvisor)",
      "id": 5,
      "gridPos": { "x": 0, "y": 4, "w": 8, "h": 4 },
      "targets": [
        { "refId": "A", "expr": "count(container_last_seen{image!=\"\"})", "legendFormat": "" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "horizontal" },
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Total container CPU (cores)",
      "id": 6,
      "gridPos": { "x": 8, "y": 4, "w": 16, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "sum(rate(container_cpu_usage_seconds_total{image!=\"\"}[5m]))", "legendFormat": "cpu" }
      ],
      "fieldConfig": { "defaults": { "unit": "cores" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },
    {
      "type": "timeseries",
      "title": "Total container memory (working set)",
      "id": 7,
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "sum(container_memory_working_set_bytes{image!=\"\"})", "legendFormat": "mem" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },
    {
      "type": "timeseries",
      "title": "Top 10 containers by memory",
      "id": 8,
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 10 },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, container_memory_working_set_bytes{image!=\"\"})",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" } }
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] }
}
