{
  "dashboard": {
    "title": "CERES Infrastructure Overview",
    "tags": ["ceres", "infrastructure", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Services Health",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=~'gitlab|zulip|nextcloud|keycloak|postgres|redis'}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "renameByName": {
                "job": "Service",
                "Value": "Status"
              }
            }
          }
        ]
      },
      {
        "id": 2,
        "title": "Total Memory Usage",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~'gitlab|zulip|nextcloud|keycloak|postgres|redis'}",
            "legendFormat": "{{name}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "PostgreSQL Database Sizes",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "pg_database_size_bytes",
            "legendFormat": "{{datname}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Network Traffic",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total[5m])",
            "legendFormat": "RX: {{name}}"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total[5m])",
            "legendFormat": "TX: {{name}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Disk I/O",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total[5m])",
            "legendFormat": "Read"
          },
          {
            "expr": "rate(node_disk_written_bytes_total[5m])",
            "legendFormat": "Write"
          }
        ]
      },
      {
        "id": 6,
        "title": "Container Restart Count",
        "type": "stat",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "changes(container_last_seen[24h])",
            "legendFormat": "{{name}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Caddy Requests Per Second",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(caddy_http_requests_total[5m])",
            "legendFormat": "{{host}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(caddy_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{host}}"
          }
        ]
      }
    ],
    "refresh": "30s"
  }
}
