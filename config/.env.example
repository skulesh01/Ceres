# .env.example – fill in the values before running deploy.ps1

# -------------------------------------------------------------------
# Общие настройки
# -------------------------------------------------------------------
DOMAIN=company.local                # основной домен (можно изменить)
POSTGRES_PASSWORD=SuperSecret123   # пароль к PostgreSQL (используется всеми сервисами)

# -------------------------------------------------------------------
# Keycloak (SSO)
# -------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=AdminSecret123

# -------------------------------------------------------------------
# ProcessMaker OIDC client (создаётся в Keycloak)
# -------------------------------------------------------------------
KEYCLOAK_CLIENT_SECRET_PM=pm_client_secret_here

# -------------------------------------------------------------------
# Nextcloud WebDAV token (создаётся в Nextcloud → Settings → Security → App passwords)
# -------------------------------------------------------------------
NEXTCLOUD_TOKEN=nextcloud_webdav_token_here

# -------------------------------------------------------------------
# FreeIPA (AD‑like) credentials
# -------------------------------------------------------------------
FREEIPA_ADMIN_PASSWORD=FreeIPAAdmin123
FREEIPA_IP=127.0.0.1   # IP‑address of the FreeIPA container (usually the same host)

# -------------------------------------------------------------------
# Slack integration (optional – leave empty to disable)
# -------------------------------------------------------------------
SLACK_WEBHOOK_URL=

# -------------------------------------------------------------------
# MeshCentral admin credentials
# -------------------------------------------------------------------
MESHADMIN_PASSWORD=MeshAdmin123

# -------------------------------------------------------------------
# MinIO (S3‑compatible storage) credentials – used by Restic
# -------------------------------------------------------------------
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadminsecret

# -------------------------------------------------------------------
# Restic backup password
# -------------------------------------------------------------------
RESTIC_PASSWORD=ResticBackupSecret

# -------------------------------------------------------------------
# Additional optional secrets (leave empty if not used)
# -------------------------------------------------------------------
# For future custom plugins or external services you can add here.
